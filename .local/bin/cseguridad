#!/bin/sh

cd $HOME

hfiles=".bashrc .xprofile .wyrdrc .xinitrc .ssh .zprofile .jackdrc"
personal="Documentos Imágenes Música Vídeos"

fireprofile=".mozilla/firefox/$(ls -t .mozilla/firefox/ | grep default-release | head -n 1)"
firebookmarks="$fireprofile/bookmarkbackups/$(ls -t $fireprofile/bookmarkbackups/ | head -n 1)"
firefox="$fireprofile/extensions
	$fireprofile/prefs.js
	$firebookmarks"

cfiles=".config/calcurse
	.config/dunst
	.config/fontconfig
	.config/lf
	.config/mpd
	.config/ncmpcpp
	.config/newsboat
	.config/nvim
	.config/pulse
	.config/shell
	.config/sxiv
	.config/tareas
	.config/wget
	.config/x11
	.config/zsh
	.config/mimeapps.list"
progs=".local/src
	.local/bin"
sfiles=".local/share/mail
	.local/share/pg
	.local/share/larbs
	.local/share/plantillas
	.local/share/stardict
	.local/share/taskwarrior-tui
	.local/share/vital
	.local/share/Vitalium
	.local/share/zathura
	.local/share/bg
	.local/share/isos
	.local/share/password-store"

orig="$hfiles $personal $firefox $cfiles $progs $sfiles"

jfuera="root@sj:/home/runiales/cs/"
jcasa="root@db:/home/runiales/cs/"
disco="/mnt/Disco/cseguridad/"

show_help() {
	cat <<-END
		usage: cseguridad [-d] [-t] [-r] [-o <opcion>] [-h]
		    -d: --delete-after
		    -t: actualiza tareas
		    -r: restaura $HOME a partir de otra copia de seguridad
		    -o: elige <opcion>
		    -h: print this message
	END
}

restaurar=false
task=false

while getopts "rtdho:" o; do case "${o}" in
	o) opcion=$OPTARG ;;
	t) task=true ;;
	d) delete="--delete-after" ;;
	r) restaurar=true ;;
	h|\?) show_help	exit 1 ;;
esac done

if $restaurar; then
	if $task; then
		echo "Fuente:"
		remoto=$(printf "$jfuera\n$jcasa\n$disco" | fzf)
		[[ -z $remoto ]] && echo "Cancelado. No se eligió ninguna fuente." && exit 1
		remoto="$remoto/./.config/tareas"
		rsync -aP --update $opcion $remoto $HOME/.config && notify-send "Tareas locales actualizadas con éxito" || (notify-send "Hubo un error durante la actualización de las tareas locales" && exit 0)
		exit 1
	fi
	echo "Fuente:"
	remoto=$(printf "$jfuera\n$jcasa\n$disco" | fzf)
	[[ -z $remoto ]] && echo "Cancelado. No se eligió ninguna fuente." && exit 1

	echo "rsync -aR $opcion $remoto $HOME"
	echo "¿Restaurar? [y/N]"
	read -r confirm
	! echo "$confirm" | grep -iq "^y$" && echo "Cancelado." && exit 1

	notify-send "Restaurando copia de seguridad"
	rsync -aP $delete $opcion $remoto $HOME && notify-send "Copia de seguridad restaurada con éxito" || (notify-send "Hubo un error durante la copia de seguidad" && exit 0)
	exit 1
fi

if $task; then
	echo "Destino:"
	remoto=$(printf "$jfuera\n$jcasa\n$disco" | fzf)
	[[ -z $remoto ]] && echo "Cancelado. No se eligió ningún destino." && exit 1
	orig=".config/tareas"
	rsync -aP --update $opcion $orig $remoto/.config && notify-send "Tareas remotas actualizadas con éxito" || (notify-send "Hubo un error durante la actualización de las tareas remotas" && exit 0)
	exit 1
fi

# Copia normal

echo "Destino:"
remoto=$(printf "$jfuera\n$jcasa\n$disco" | fzf)
[[ -z $remoto ]] && echo "Cancelado. No se eligió ningún destino." && exit 1

notify-send "Copia de seguridad en proceso"
rsync -aRP $delete $update $opcion $orig $remoto && notify-send "Copia de seguridad terminada con éxito" || (notify-send "Hubo un error durante la copia de seguidad" && exit 0)
