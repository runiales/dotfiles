#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
ctl='systemctl'



case "$(printf "ğŸ”’ lock\nğŸšª Leave $WM\nâ™» renew $WM\nğŸ» hibernate\nğŸ”ƒ Reboot\nğŸ–¥ shutdown\nğŸ’¤ sleep\nğŸ“º display off" | dmenu -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	"ğŸšª Leave $WM") kill -TERM $(pgrep -u $USER "\bdwm$") ;;
	"â™» renew $WM") kill -HUP $(pgrep -u $USER "\bdwm$") ;;
	'ğŸ» hibernate') slock $ctl hibernate -i ;;
	'ğŸ’¤ sleep') slock $ctl suspend -i ;;
	'ğŸ”ƒ Reboot') $ctl reboot -i ;;
	'ğŸ–¥ shutdown') $ctl poweroff -i ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
